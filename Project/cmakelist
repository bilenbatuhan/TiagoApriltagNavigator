cmake_minimum_required(VERSION 3.0.2)
project(assignment_1)

find_package(catkin REQUIRED COMPONENTS
  roscpp
  actionlib
  std_msgs
  move_base_msgs

  geometry_msgs
  apriltag_ros
  actionlib_msgs
)

## Generate messages in the 'msg' folder
add_message_files(
  FILES  
  goal.msg
  position.msg
  Detection.msg
  Detections.msg
)

add_service_files(
  FILES  
  HeadMovement.srv
  CheckID.srv
  SetRequestedIDs.srv
  FinalTagList.srv
)

add_action_files(
  FILES
  Search.action
)

generate_messages(
  DEPENDENCIES
  actionlib_msgs
  std_msgs
  geometry_msgs
)

catkin_package(
  INCLUDE_DIRS include
  LIBRARIES assignment_1_utils
#  DEPENDS system_lib
  CATKIN_DEPENDS 
	actionlib
	message_runtime
  geometry_msgs
  apriltag_ros
  actionlib_msgs
)

include_directories(
  include
  ${catkin_INCLUDE_DIRS}
)

add_library(assignment_1_utils
  src/geometry/cartesian_point.cpp
  src/geometry/polar_point.cpp
  src/geometry/position.cpp
  
  src/server_utils/head_movement_server.cpp
  src/server_utils/poses_detection_publisher.cpp
  src/server_utils/check_id_server.cpp
  src/server_utils/search_action.cpp
)

add_executable(Node_B src/main/server.cpp)
add_executable(Node_A src/main/client.cpp)

add_dependencies(assignment_1_utils ${catkin_EXPORTED_TARGETS})
add_dependencies(Node_B assignment_1_utils ${catkin_EXPORTED_TARGETS})
add_dependencies(Node_A assignment_1_utils ${catkin_EXPORTED_TARGETS})

target_link_libraries(assignment_1_utils ${catkin_LIBRARIES})
target_link_libraries(Node_B assignment_1_utils ${catkin_LIBRARIES})
target_link_libraries(Node_A assignment_1_utils ${catkin_LIBRARIES})
